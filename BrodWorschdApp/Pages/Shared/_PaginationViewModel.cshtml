@model IPaginationViewModel

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <span class="page-link">@Model.CultureStrings["PreviousPage"]</span>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Customer" asp-route-currentPage="@(Model.CurrentPage - 1)">@Model.CultureStrings["PreviousPage"]</a>
            </li>
        }

        @if (Model.CurrentPage > 3)
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Customer" asp-route-currentPage="@(Model.CurrentPage - 3)">...</a>
            </li>
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            if (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-page="./Customer" asp-route-currentPage="@i">@i</a></li>
                }
            }
        }

        @if (Model.CurrentPage < Model.TotalPages - 2)
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Customer" asp-route-currentPage="@(Model.CurrentPage + 3)">...</a>
            </li>
        }

        @if (Model.CurrentPage == Model.TotalPages)
        {
            <li class="page-item disabled">
                <span class="page-link">@Model.CultureStrings["NextPage"]</span>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Customer" asp-route-currentPage="@(Model.CurrentPage + 1)">@Model.CultureStrings["NextPage"]</a>
            </li>
        }
    </ul>
</nav>

